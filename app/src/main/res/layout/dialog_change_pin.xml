<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu để đặt lại PIN mới"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blueFigma"
            />
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="#00000000"
            android:padding="10dp"

            />
        <TextView
            android:id="@+id/tvSaiPass"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Sai mật khẩu"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#E91E63"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã PIN mới (6 số)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blueFigma"
            />
        <EditText
            android:id="@+id/etPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="#00000000"
            android:padding="10dp"
            android:maxLength="6"
            />
        <TextView
            android:id="@+id/tvSaiPin"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="PIN phải có 6 số"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#E91E63"
           android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại PIN"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blueFigma"
            />
        <EditText
            android:id="@+id/etRePin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="#00000000"
            android:padding="10dp"
            android:maxLength="6"

            />
        <TextView
            android:id="@+id/tvSaiRePin"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Nhập lại PIN không đúng"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#E91E63"
            android:visibility="gone"
            />
        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
           android:id="@+id/btnXacNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button"
            android:backgroundTint="@color/greenFigma1"
            android:layout_marginTop="10dp"
            android:text="Xác Nhận"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:spinning_bar_color="#FFE500"
            android:layout_gravity="center"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>